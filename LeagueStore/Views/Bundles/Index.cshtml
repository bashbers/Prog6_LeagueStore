@model IEnumerable<LeagueStore.Models.Bundle>

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <h2>Index</h2>

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RiotPoints)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BannerUrl)                           
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RiotPoints)
                            </td>
                            <td>
                                <img src="@item.BannerUrl" style="max-height: 200px"/>
                            </td>
                            <td>
                                <span class="btn-info">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </span>
                                <span class="btn-info">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </span>
                                <span class="btn-info">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </span>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>